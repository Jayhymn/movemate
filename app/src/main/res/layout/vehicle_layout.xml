<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="220dp"
    android:layout_weight="0.4"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_tracking_view"
    >
    <TextView
        android:id="@+id/vehicle_type"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ocean Freight"
        android:textColor="@color/primary_variant_color"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/transit_type"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Intentional"
        android:textSize="12sp"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/freight_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cargo_freight"
        />

</LinearLayout>
