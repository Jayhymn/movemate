<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_color"
    tools:context=".ui.calculate.CalculateFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <ImageView
                android:id="@+id/nav_icon"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:scaleType="fitStart"
                android:paddingVertical="15dp"
                android:layout_gravity="start"
                android:src="@drawable/arrow_previous"
                app:tint="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Calculate"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBarLayout"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_screen_color"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tracking_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/destination"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_color"
                    android:textSize="21sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:id="@+id/tracking_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_tracking_view">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_input_field"
                        >
                        <ImageView
                            android:id="@+id/parcel_icon1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/export_icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginHorizontal="5dp"
                            app:tint="@color/dirty_white"
                            />
                        <View
                            android:id="@+id/divider1"
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:background="@color/dirty_white"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/parcel_icon1"
                            />
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Sender location"
                            android:textSize="18sp"
                            android:textColorHint="@color/gray"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/parcel_icon1"
                            android:layout_marginHorizontal="5dp"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/secondary_color"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/divider1"
                            android:backgroundTint="@android:color/transparent"
                            android:textCursorDrawable="@drawable/cursor_drawable"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_input_field"
                        >
                        <ImageView
                            android:id="@+id/parcel_icon2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/import_icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginHorizontal="5dp"
                            app:tint="@color/dirty_white"
                            />
                        <View
                            android:id="@+id/divider2"
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:background="@color/dirty_white"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/parcel_icon2"
                            />
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Receiver location"
                            android:textSize="18sp"
                            android:textColorHint="@color/gray"                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/parcel_icon2"
                            android:layout_marginHorizontal="5dp"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/secondary_color"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/divider2"
                            android:backgroundTint="@android:color/transparent"
                            android:textCursorDrawable="@drawable/cursor_drawable"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_input_field"
                        >
                        <ImageView
                            android:id="@+id/parcel_icon3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/hour_glass"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginHorizontal="5dp"
                            app:tint="@color/dirty_white" />
                        <View
                            android:id="@+id/divider3"
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:background="@color/dirty_white"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/parcel_icon3"
                            />
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Approx Weight"
                            android:textSize="18sp"
                            android:textColorHint="@color/gray"                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/parcel_icon3"
                            android:layout_marginHorizontal="5dp"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/secondary_color"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/divider3"
                            android:backgroundTint="@android:color/transparent"
                            android:textCursorDrawable="@drawable/cursor_drawable"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Packaging"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_color"
                    android:textSize="21sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginVertical="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What are you sending?"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_tracking_view">
                    <ImageView
                        android:id="@+id/parcel_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/parcel_image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginHorizontal="5dp"
                        />
                    <View
                        android:id="@+id/divider"
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:background="@color/dirty_white"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/parcel_icon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Box"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/parcel_icon"
                        android:layout_marginHorizontal="5dp"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"
                        android:textColor="@color/secondary_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/divider"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/arrow_down"
                        android:layout_marginHorizontal="15dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_color"
                    android:textSize="21sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginVertical="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What are you sending?"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_doc"
                        style="@style/CustomChipStyle"
                        android:textColor="@color/secondary_color"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documents"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_glass"
                        android:textColor="@color/secondary_color"
                        android:textSize="16sp"
                        android:padding="5dp"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glass"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_liquid"
                        style="@style/CustomChipStyle"
                        android:textColor="@color/secondary_color"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liquid"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_food"
                        style="@style/CustomChipStyle"
                        android:textColor="@color/secondary_color"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_electronic"
                        style="@style/CustomChipStyle"
                        android:textColor="@color/secondary_color"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronic"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_product"
                        style="@style/CustomChipStyle"
                        android:textColor="@color/secondary_color"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Producg"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_other"
                        style="@style/CustomChipStyle"
                        android:textColor="@color/secondary_color"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        />


                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_calculate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Calculate"
                android:textSize="16sp"
                android:layout_marginTop="80dp"
                android:layout_below="@id/main_content"
                style="@style/CutosmButtonStyle"
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>